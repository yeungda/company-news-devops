  <pipelines group="CompanyNews">
    <pipeline name="MainBuild">
      <materials>
        <git url="git://github.com/yeungda/company-news-devops.git" />
      </materials>
      <stage name="MainBuild">
        <environmentvariables>
          <variable name="JAVA_HOME">/usr/lib/jvm/java-1.6.0/</variable>
        </environmentvariables>
        <jobs>
          <job name="MainBuild">
            <tasks>
              <exec command="./go" />
            </tasks>
            <artifacts>
              <artifact src="target/companyNews.war" dest="dist" />
            </artifacts>
          </job>
        </jobs>
      </stage>
    </pipeline>

    <pipeline name="Development" labeltemplate="${upstreamArtifact}">
      <materials>
        <git url="git://github.com/yeungda/company-news-devops.git" />
        <pipeline pipelineName="MainBuild" stageName="MainBuild" materialName="upstreamArtifact"/>
      </materials>
      <stage name="Deploy">
        <approval type="manual" />
        <environmentvariables>
          <variable name="JAVA_HOME">/usr/lib/jvm/java-1.6.0/</variable>
          <variable name="STOMP_SERVER">127.0.0.1</variable>
        </environmentvariables>
        <jobs>
          <job name="Deploy">
            <tasks>
              <exec command="./go" args="mc:deploy[dev]" />
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>
    <pipeline name="uat" labeltemplate="${upstreamArtifact}">
      <materials>
        <git url="git://github.com/yeungda/company-news-devops.git" />
        <pipeline pipelineName="MainBuild" stageName="MainBuild" materialName="upstreamArtifact"/>
      </materials>
      <stage name="Deploy">
        <approval type="manual" />
        <environmentvariables>
          <variable name="JAVA_HOME">/usr/lib/jvm/java-1.6.0/</variable>
          <variable name="STOMP_SERVER">127.0.0.1</variable>
        </environmentvariables>
        <jobs>
          <job name="Deploy">
            <tasks>
              <exec command="./go" args="mc:deploy[uat]" />
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>
    <pipeline name="Production" labeltemplate="${upstreamArtifact}">
      <materials>
        <git url="git://github.com/yeungda/company-news-devops.git" />
        <pipeline pipelineName="MainBuild" stageName="MainBuild" materialName="upstreamArtifact"/>
      </materials>
      <stage name="Deploy">
        <approval type="manual" />
        <environmentvariables>
          <variable name="JAVA_HOME">/usr/lib/jvm/java-1.6.0/</variable>
          <variable name="STOMP_SERVER">127.0.0.1</variable>
        </environmentvariables>
        <jobs>
          <job name="Deploy">
            <tasks>
              <exec command="./go" args="mc:deploy[prod]" />
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>

  </pipelines>
